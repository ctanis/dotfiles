set -g default-terminal "tmux-256color"
# 
set -g xterm-keys on
set -s extended-keys always

# Explicitly advertise extended-keys support to apps inside tmux
# so Emacs/Vim know they can use these sequences.
set -as terminal-features 'xterm*:extkeys'

unbind C-b
set -g prefix C-]
bind C-] send-prefix

set -g status off
set -g set-titles on
set -g set-titles-string '(#I:#W)#T'
set -g allow-rename on
