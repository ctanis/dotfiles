#! /bin/sh  #  -*- Mode: Shell-script; -*- 

if [ -z $1 ]; then
    echo "usage error"
    exit
fi

if [ ! -f $1 ]; then
    echo "file not found: $1"
    exit
fi

INPUTFILE=$*
TMPOUT=`mktemp -u -t codepdf`
PDFOUTPUT=`basename $1`.pdf

# -C is line-numbers=5
#a2ps -1 -B -M letter -R -C -L75 $INPUTFILE -o $TMPOUT
a2ps -1 -B -M letter -R -L75 $INPUTFILE -o $TMPOUT
ps2pdf  $TMPOUT $PDFOUTPUT
open $PDFOUTPUT
